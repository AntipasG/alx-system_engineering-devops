#!/bin/bash

# Function to get subdomain information
get_subdomain_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    local record_info=$(dig +short ${full_domain})
    if [ -z "$record_info" ]; then
        echo "No DNS record found for ${full_domain}"
    else
        echo "The subdomain ${subdomain} is an A record and points to ${record_info}"
    fi
}

# Main script
domain=$1
subdomain=$2

if [ -z "$domain" ]; then
    echo "Domain name is required"
    exit 1
fi

if [ -z "$subdomain" ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
    for sub in "${subdomains[@]}"; do
        get_subdomain_info $domain $sub
    done
else
    get_subdomain_info $domain $subdomain
fi

